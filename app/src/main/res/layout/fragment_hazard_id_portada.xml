<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.com.appsource.outsafetyapp.HazardIdPortadaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="180dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewLogoCliente"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:src="@mipmap/select_image" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/select_logo_empresa" />

                <ImageView
                    android:id="@+id/imageViewImagenRepresentativaPortada"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:src="@mipmap/select_image" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/select_img_portada" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_text_buscar_empresa" />

                <EditText
                    android:id="@+id/etxtFechaHazardId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seleccionar Fecha"
                    android:inputType="date">


                </EditText>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
